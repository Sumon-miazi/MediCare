<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/singleDoctorImageViewId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/demo"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctorNameTxtViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Dr. Suman miazi"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/doctorTitleTxtViewId"
        app:layout_constraintStart_toEndOf="@+id/singleDoctorImageViewId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/doctorTitleTxtViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBBS, FCPS,"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/doctorNameTxtViewId"
        app:layout_constraintTop_toBottomOf="@+id/doctorNameTxtViewId" />

</androidx.constraintlayout.widget.ConstraintLayout>